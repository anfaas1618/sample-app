<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="liveQuizMultipleChoicesAnswersExplanationVM" type="com.application.app.modules.livequizmultiplechoicesanswersexplanation.data.viewmodel.LiveQuizMultipleChoicesAnswersExplanationVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linear511LiveQuiz"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyledeep_purple_400">
        <androidx.appcompat.widget.Toolbar android:gravity="start"
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearAnswerExplanat"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_68pxh"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtAnswersExplana"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.91"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{liveQuizMultipleChoicesAnswersExplanationVM.liveQuizMultipleChoicesAnswersExplanationModel.txtAnswersExplana}"
                    style="@style/txtGraphikmedium24_1" tools:text="@string/msg_answers_explana"/>
                <ImageView android:id="@+id/imageIcon"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_marginBottom="@dimen/_6pxv"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_6pxv"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_icon_39"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearContent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8pxv"
            android:layout_marginEnd="@dimen/_8pxh"
            android:layout_marginStart="@dimen/_8pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_5">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearQuestion"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtQUESTION3OF1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{liveQuizMultipleChoicesAnswersExplanationVM.liveQuizMultipleChoicesAnswersExplanationModel.txtQUESTION3OF1}"
                    style="@style/txtRubikmedium14_3" tools:text="@string/msg_question_3_of_1"/>
                <TextView android:id="@+id/txtWhichPlayerSc"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="match_parent"
                    android:text="@{liveQuizMultipleChoicesAnswersExplanationVM.liveQuizMultipleChoicesAnswersExplanationModel.txtWhichPlayerSc}"
                    style="@style/txtRubikmedium20" tools:text="@string/msg_which_player_sc"/>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearSelecterAnswer"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtSELECTEDANSWER"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{liveQuizMultipleChoicesAnswersExplanationVM.liveQuizMultipleChoicesAnswersExplanationModel.txtSELECTEDANSWER}"
                    style="@style/txtGraphikmedium14_2" tools:text="@string/lbl_selected_answer"/>
                <EditText
                    android:background="@drawable/rectangle_bg_white_a700_border_red_a200_radius_16"
                    android:drawableEnd="@drawable/img_icon_43"
                    android:drawablePadding="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:hint="@string/msg_robin_van_persi"
                    android:id="@+id/etRobinVanPersi"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_20pxv"
                    android:paddingEnd="@dimen/_16pxh"
                    android:paddingStart="@dimen/_24pxh"
                    android:paddingTop="@dimen/_20pxv"
                    android:singleLine="true"
                    android:text="@={liveQuizMultipleChoicesAnswersExplanationVM.liveQuizMultipleChoicesAnswersExplanationModel.etRobinVanPersiValue}"
                    android:textColorHint="@color/red_A200" style="@style/etSolidRoundedOutline_3"/>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearCorrectAnswer"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtCORRECTANSWER"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{liveQuizMultipleChoicesAnswersExplanationVM.liveQuizMultipleChoicesAnswersExplanationModel.txtCORRECTANSWER}"
                    style="@style/txtGraphikmedium14_2" tools:text="@string/lbl_correct_answer"/>
                <LinearLayout android:id="@+id/linearGroup1831"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" style="@style/groupStylegreen_400cornerRadius">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtSadioMane"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_16pxv"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_16pxv"
                        android:layout_weight="0.79"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{liveQuizMultipleChoicesAnswersExplanationVM.liveQuizMultipleChoicesAnswersExplanationModel.txtSadioMane}"
                        style="@style/txtRubikmedium16" tools:text="@string/lbl_sadio_mane"/>
                    <ImageView android:id="@+id/imageIcon1"
                        android:layout_height="@dimen/_24pxh"
                        android:layout_marginBottom="@dimen/_16pxv"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:layout_marginStart="@dimen/_174pxh"
                        android:layout_marginTop="@dimen/_16pxv"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_icon_44"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearExplanation"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtEXPLANATION"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{liveQuizMultipleChoicesAnswersExplanationVM.liveQuizMultipleChoicesAnswersExplanationModel.txtEXPLANATION}"
                    style="@style/txtRubikmedium14_3" tools:text="@string/lbl_explanation"/>
                <TextView android:id="@+id/txtSouthamptonsS"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_width="match_parent"
                    android:text="@{liveQuizMultipleChoicesAnswersExplanationVM.liveQuizMultipleChoicesAnswersExplanationModel.txtSouthamptonsS}"
                    style="@style/txtRubikregular16_2" tools:text="@string/msg_southampton_s_s"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnNext"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_144pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_16pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_16pxv"
                android:singleLine="true"
                android:text="@string/lbl_next"
                android:textAllCaps="false"
                style="@style/btnSolidRounded_4" tools:text="@string/lbl_next"/>
        </LinearLayout>
    </LinearLayout>
</layout>
