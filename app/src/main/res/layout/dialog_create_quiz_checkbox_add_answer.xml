<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="createQuizCheckboxAddAnswerVM" type="com.application.app.modules.createquizcheckboxaddanswer.data.viewmodel.CreateQuizCheckboxAddAnswerVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linear461CreateQu"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyledeep_purple_400">
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearAddAnswer"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_8">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearAddAnswer1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtAddAnswer"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{createQuizCheckboxAddAnswerVM.createQuizCheckboxAddAnswerModel.txtAddAnswer}"
                    style="@style/txtGraphikmedium16" tools:text="@string/lbl_add_answer2"/>
                <EditText
                    android:background="@drawable/rectangle_bg_white_a700_border_deep_purple_50_radius_20"
                    android:drawablePadding="@dimen/_10pxh"
                    android:drawableStart="@drawable/img_checkbox_2"
                    android:ellipsize="end"
                    android:hint="@string/lbl_add_answer"
                    android:id="@+id/etAddAnswer"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_20pxv"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_20pxv"
                    android:singleLine="true"
                    android:text="@={createQuizCheckboxAddAnswerVM.createQuizCheckboxAddAnswerModel.etAddAnswerValue}"
                    android:textColorHint="@color/bluegray_400" style="@style/etSolidRoundedOutline_2"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearCorrectanswer"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_24pxv"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtCorrectAnswer"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_weight="0.73"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{createQuizCheckboxAddAnswerVM.createQuizCheckboxAddAnswerModel.txtCorrectAnswer}"
                    style="@style/txtGraphikmedium16" tools:text="@string/lbl_correct_answer2"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchMaterialGroup301"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_marginEnd="@dimen/_8pxh"
                    android:layout_marginStart="@dimen/_149pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_weight="0.27" android:layout_width="0dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
